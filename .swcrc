{
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "tsx": false,
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "target": "es2017",
    "externalHelpers": false,
    "keepClassNames": true,
    "loose": false,
    "minify": {
      "compress": true,
      "mangle": true
    },
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@functions/*": ["./src/functions/*"]
    }
  },
  "module": {
    "type": "commonjs"
  }
}
