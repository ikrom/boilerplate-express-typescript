{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "tab",
    "indentSize": 2,
    "lineWidth": 120,
    "ignore": ["./node_modules/**/*.*", "./dist/**/*.*"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "ignore": ["./node_modules/**/*.*", "./dist/**/*.*"]
  }
}
